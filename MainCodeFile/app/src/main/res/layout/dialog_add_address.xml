<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/windowBackgroundColor"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/fullNameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Full Name"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/switzer_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/fullNameCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fullNameTextview"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/fullNameEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
                    android:hint="Enter Your Name"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#828A89"
                    android:fontFamily="@font/switzer_regular"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:background="@null"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginVertical="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mobileNumberTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullNameCardView"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Mobile Number"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/switzer_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/mobileNumberCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobileNumberTextview"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/mobileNumberEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
                    android:hint="Enter Mobile Number"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#828A89"
                    android:fontFamily="@font/switzer_regular"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:background="@null"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginVertical="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fullAddressTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mobileNumberCardView"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Full Address"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/switzer_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/fullAddressCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fullAddressTextview"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/fullAddressEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
                    android:hint="Enter Full Address"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#828A89"
                    android:fontFamily="@font/switzer_regular"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:background="@null"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginVertical="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fullAddressCardView"
            android:text="Save"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/switzer_semibold"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:backgroundTint="@color/themeColor"
            app:cornerRadius="@dimen/_11sdp"
            android:paddingVertical="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_18sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>