<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FavouriteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topSectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_6sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/backIcon"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_37sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/back_icon"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/backIcon"
            app:layout_constraintEnd_toStartOf="@id/favouriteIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Favourite"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/switzer_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/favouriteIcon"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_37sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/bottom_navigation_menu_favourite_icon"
                android:layout_gravity="center"
                app:tint="@color/themeColor" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favouriteItemRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topSectionLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMenuLayout"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_margin="@dimen/_6sdp"/>

    <TextView
        android:id="@+id/noItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSectionLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMenuLayout"
        android:text="No item in favourite"
        android:textColor="@color/blackTextColor"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/switzer_medium"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constrainedWidth="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottomNavigationMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/bottomNavigationHomeMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:src="@drawable/bottom_navigation_menu_home_icon"
                app:tint="#828A89" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="@dimen/_9sdp"
                android:textColor="#828A89"
                android:fontFamily="@font/switzer_medium"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomNavigationFavouriteMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:src="@drawable/bottom_navigation_menu_favourite_icon"
                app:tint="@color/themeColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/themeColor"
                android:fontFamily="@font/switzer_medium"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomNavigationShoppingMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:src="@drawable/bottom_navigation_menu_shopping_icon"
                app:tint="#828A89" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:textSize="@dimen/_9sdp"
                android:textColor="#828A89"
                android:fontFamily="@font/switzer_medium"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomNavigationProfileMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:src="@drawable/bottom_navigation_menu_profile_icon"
                app:tint="#828A89" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_9sdp"
                android:textColor="#828A89"
                android:fontFamily="@font/switzer_medium"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>